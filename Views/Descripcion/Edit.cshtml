@model AMARILLO.Models.Descripcion

@{
    ViewData["Title"] = "Editar el Registro de Celulares";
}


<form asp-controller="Descripcion" asp-action="Edit" method="POST"> 


    <input type="hidden" asp-for="id" />
    <div class="form-group">
    <label >Nombre del Producto</label>
    <input type="text" asp-for="nombreproducto" class="form-control" placeholder="Nombre del Producto" required>
    </div>

    <div class="form-group">
    <label >Descripción del Producto</label>
    <textarea type="text" asp-for="descripcion" class="form-control" placeholder="Descripción del Producto" required>
    </textarea>
    </div>


    <div class="form-group">
    <label >Informacion adicional del Producto</label>
    <textarea type="text" asp-for="adicional" class="form-control" placeholder="Informacion adicional del Producto" required>
    </textarea>
    </div>

    <button type="submit" class="btn btn-primary">Actualizar Producto</button>

</form>