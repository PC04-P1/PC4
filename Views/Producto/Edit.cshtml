@model Producto

@{
    ViewData["Title"] = "Producto";
}

<div class="col-md-8">
    @* col-md-8 *@
    @* <div class="col-sm-4">   *@
        <h1 class="display-4">Editar Producto</h1>

        <form asp-controller="Producto" asp-action="Edit">
           
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>   

            <div class="form-group">
                <label asp-for="TipoProducto" class="control-label"></label>
                <select name="IDTipoProducto" class="form-control">
                    @foreach (TipoProducto tipo in ViewBag.TipoProducto)
                    {
                        <option value="@tipo.ID">@tipo.Nombre</option>
                    }
                </select>
            </div>  
            
            <div class="form-group">
                <label asp-for="ImagenURL" class="control-label"></label>
                <input asp-for="ImagenURL" class="form-control" />
            </div> 
                   
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
            </div>               
            
            <div class="form-group">
                <label class="control-label">Actualizar Stock</label>
                <input asp-for="Stock" class="form-control" min="@Model.Stock"/>
            </div>                                

            <div class="form-group">
                <label asp-for="Accesorios" class="control-label"></label>
                <input asp-for="Accesorios" class="form-control" />
            </div>
    <div class="form-group">
                <label asp-for="Elejir" class="control-label"></label>
                <textarea asp-for="Elejir" class="form-control"></textarea> 
            </div>


            <div class="form-group">
                <label asp-for="Tips" class="control-label"></label>
                <textarea asp-for="Tips" class="form-control"></textarea>
            </div>
                      
            <div class="form-group">
                 <button type="submit" class="btn btn-primary">Actualizar</button> 
            </div>                
        </form>  

    @* </div> *@
</div>
