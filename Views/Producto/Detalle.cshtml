@model AMARILLO.Models.Producto

@{
    ViewData["Title"] = "Productos";
}

<div class="row">
  <div class="col-md-4">
    <h3 class="titulo">@Model.Nombre </h3>
  </div>
</div>
  
<main>
  <div class="content">
      <div class="planta-content">  
        <img src="@Url.Content(Model.ImagenURL)" class="rounded">
        <a asp-controller="Compra" asp-action="AddItem" asp-route-id="@Model.ID"><i class="fas fa-plus"></i></a>
      </div>

      <div class="info">
        <div class="texto-info">
          <h4 class="propiedad"><i class="fas fa-mobile"></i> Accesorios</h4>
          @Html.DisplayFor(modelItem => Model.Accesorios)
        </div>
       

                <div class="texto-info">
          <h4 class="propiedad"><i class="fas fa-mobile"></i> Color</h4>
          @Html.DisplayFor(modelItem => Model.Elejir)
        </div>

 

        <div class="texto-info">
          <h4 class="propiedad"><i class="fas fa-mobile"></i> Tama√±o</h4>
          @Html.DisplayFor(modelItem => Model.Tips)
        </div>
      </div>
  </div> 
</main>
